<style>
	:root {
		--container-bg-color: #333;
		--patient-bg-color: rgba(189, 183, 183, 0.2);
		--patient-button-hover-color: rgba(161, 11, 11, 1);
		--hospital-bg-color: rgba(43, 43, 43, 0.2);
		--hospital-button-hover-color: rgba(47, 22, 116, 0.9);
		--hover-width: 75%;
		--other-width: 25%;
		--speed: 1000ms;
	}

	html,
	body {
		padding: 0;
		margin: 0;
		font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
		width: 100%;
		height: 100%;
		overflow-x: hidden;
	}

	.button {
		display: block;
		position: absolute;
		left: 50%;
		top: 40%;
		height: 4.5rem;
		padding-top: 1.3rem;
		width: 15rem;
		text-align: center;
		font-size: 1rem;
		font-weight: bold;
		text-transform: uppercase;
		text-decoration: none;
		transform: translateX(-50%);
	}

	.split.patient .button:hover {
		background-color: var(--patient-button-hover-color);
		border-color: var(--patient-button-hover-color);
	}

	.split.hospital .button:hover {
		background-color: var(--hospital-button-hover-color);
		border-color: var(--hospital-button-hover-color);
	}

	.container {
		position: relative;
		width: 100%;
		height: 100%;
		background: var(--container-bg-color);
	}

	.split {
		position: absolute;
		width: 50%;
		height: 100%;
		overflow: hidden;
	}

	.split.patient {
		left: 0;
		background: url("https://image.freepik.com/free-vector/vector-illustration-tiny-cute-cartoon-patient-man-character-broken-hospital-arm-gypsum-bandage-plastered-arm_52005-73.jpg")
			center center no-repeat;
		background-size: cover;
	}

	.split.patient:before {
		position: absolute;
		content: "";
		width: 100%;
		height: 100%;
		background: var(--patient-bg-color);
	}

	.split.hospital {
		right: 0;
		background: url("https://wikiclipart.com/wp-content/uploads/2017/01/Hospital-clipart-images-clipartfest.png")
			center center no-repeat;
		background-size: cover;
	}

	.split.hospital:before {
		position: absolute;
		content: "";
		width: 100%;
		height: 100%;
		background: var(--hospital-bg-color);
	}

	.split.patient,
	.split.hospital,
	.split.hospital:before,
	.split.patient:before {
		transition: var(--speed) all ease-in-out;
	}

	.hover-patient .patient {
		width: var(--hover-width);
	}

	.hover-patient .hospital {
		width: var(--other-width);
	}

	.hover-patient .hospital:before {
		z-index: 2;
	}

	.hover-hospital .hospital {
		width: var(--hover-width);
	}

	.hover-hospital .patient {
		width: var(--other-width);
	}

	.hover-hospital .patient:before {
		z-index: 2;
	}

	@media (max-width: 800px) {
		h1 {
			font-size: 2rem;
		}

		.button {
			width: 12rem;
		}
	}

	@media (max-height: 700px) {
		.button {
			top: 70%;
		}
	}
</style>
<div class="split patient">
	<a href="/patient" class="btn btn-outline-danger button">PATIENT</a>
</div>
<div class="split hospital">
	<a href="hospital" class="button btn btn-outline-primary">HOSPITAL</a>
</div>
